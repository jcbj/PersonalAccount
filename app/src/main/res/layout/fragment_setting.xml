<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:orientation="vertical"
             tools:context="com.example.jc.personalaccount.FragmentSetting">

    <Button
        android:id="@+id/fragment_setting_btn_export_database"
        android:text="@string/fragment_setting_btn_export_database"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/fragment_setting_spinner_item"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/fragment_setting_btn_export_database_csv"
        android:text="@string/fragment_setting_btn_export_database_CSV"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fragment_setting_btn_exit"
        android:text="@string/common_btn_exit"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
