<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jc.personalaccount.MainActivity">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.jc.personalaccount.FragmentHome"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/fragment_summary"
        android:name="com.example.jc.personalaccount.FragmentSummary"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/fragment_account"
        android:name="com.example.jc.personalaccount.FragmentAccount"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.example.jc.personalaccount.FragmentDetail"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/fragment_car"
        android:name="com.example.jc.personalaccount.FragmentCar"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <com.example.jc.personalaccount.ViewIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </com.example.jc.personalaccount.ViewIndicator>


</LinearLayout>
